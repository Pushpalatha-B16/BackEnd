r=int(input("enter rows:"))
for i in range(1,r+1):
    for j in range(1,i+1):
        print("*",end=" ")
    for s in range(1,(2*r-2*i)+1):
        print(" ",end=" ")
    for j in range(1,i+1):
        print("*",end=" ")
    print()
for k in range(r-1,0,-1):
    for j in range(1,k+1):
        print("*",end=" ")
    for s in range(2*r-2*k):
        print(" ",end=" ")
    for  l in range(1,k+1):
        print("*",end=" ")
    print()
